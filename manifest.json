{
  "manifest_version": 2,
  "name": "Crypness",
  "version": "1.0",
  "description": "Crypto Alert Extension",
  "icons": {
    "128": "img/icon128.png",
    "32": "img/icon32.png"
  },
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "<all_urls>",
    "contextMenus",
    "tabs",
    "notifications",
    "storage"
  ],

  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["<all_urls>"],
      "js": ["popup.js", "alert.js"]
    }
  ]
}
