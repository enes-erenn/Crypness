{
  "manifest_version": 3,
  "name": "Crypness",
  "version": "1.0",
  "description": "Cryptocurrency Extension",
  "icons": {
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_icon": "assets/icons/icon128.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": ["storage"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}
